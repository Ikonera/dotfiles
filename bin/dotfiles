#!/bin/env bash

set -e

DOTFILES_DIR="$HOME/.dotfiles"
SSH_DIR="$HOME/.ssh"

echo "Research system updates..."
sudo pacman -Syu
echo "System updated"

if ! [[ -x $(command -v ansible) ]]; then
	echo "Install ansible..."
	sudo pacman -S ansible --noconfirm
fi

if ! [[ -e "$HOME/.ssh/id_rsa" ]]; then
	echo "SSH key not found, creating one..."

	! [[ -d $SSH_DIR ]] && mkdir -p "$HOME/.ssh"

	chmod 700 $SSH_DIR

	ssh-keygen -t rsa -b 4096 -N '' -C "$USER@$HOSTNAME"

	cat "$SSH_DIR/id_rsa.pub" >> "$SSH_DIR/authorized_keys"

	chmod 600 $SSH_DIR/authorized_keys
fi

if ! [[ -d "$DOTFILES_DIR" ]]; then
	git clone "https://github.com/Ikonera/dotfiles" "$DOTFILES_DIR"
else
	git -C "$DOTFILES_DIR" pull
fi

if [[ -f "$DOTFILES_DIR/requirements.yml" ]]; then
	cd "$DOTFILES_DIR"
	ansible-galaxy install -r "$DOTFILES_DIR/requirements.yml"
fi

cd "$DOTFILES_DIR"
ansible-playbook --diff "$DOTFILES_DIR/main.yml" "$@"
